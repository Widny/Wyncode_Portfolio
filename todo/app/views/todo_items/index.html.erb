<header>

<h1>The Executionist</h1>

</header>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_items.each do |todo_item| %>
      <tr>
        <td><%= todo_item.description %></td>
        <td><button type="button"><%= link_to 'Show', todo_item %></button></td>
        <td><button type="button"><%= link_to 'Edit', edit_todo_item_path(todo_item) %></button></td>
        <td><button type="button"><%= link_to 'Destroy', todo_item, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

